<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="222dp"
        android:layout_height="222dp"
        android:src="@drawable/item"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/product_title"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:text="afmkmafmlmfmaslfmamflmaslfmalkmflamslasfmklasmflkmaslfmlsamflamsl"/>
    <TextView
        android:id="@+id/product_price"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FF6623"
        android:layout_marginTop="4dp"
        android:text="112,000원"/>
    <TextView
        android:id="@+id/product_deadline"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#F10505"
        android:layout_marginTop="4dp"
        android:text="예약 마감일:24년01월26일까지"/>


</LinearLayout>